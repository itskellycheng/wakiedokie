<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp">
    <!--tools:showIn="@layout/activity_main">-->

    <TextView
        android:id="@+id/wakeup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/wakeup_message" />

    <ImageView
        android:id="@+id/boy_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/wakeup_message"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/boy" />


    <TextView
        android:id="@+id/boy_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wakeup_message"
        android:layout_toRightOf="@+id/boy_img"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/name_boy" />

    <TextView
        android:id="@+id/question_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boy_img"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/question_intro" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_intro"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/question" />

    <TextView
        android:id="@+id/answer_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/answer_intro" />

    <Button android:id="@+id/option1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer_intro"
        android:text="@string/option1" />

    <Button android:id="@+id/option2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option1"
        android:text="@string/option2" />





</RelativeLayout>
