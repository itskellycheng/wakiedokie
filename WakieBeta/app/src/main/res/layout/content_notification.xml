<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp">
    <!--tools:showIn="@layout/activity_main">-->


    <ImageView
        android:id="@+id/boy_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/boy" />

    <TextView
        android:id="@+id/boy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/boy_img"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="request from: Victor" />

    <TextView
        android:id="@+id/boy_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boy_name"
        android:layout_toRightOf="@+id/boy_img"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Message:Wake up with me" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boy_img"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:onClick="confirmRequest"/>

        <Button
            android:id="@+id/button_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_confirm"
            android:text="Decline"
            android:onClick="declineRequest"/>
    </RelativeLayout>




</RelativeLayout>